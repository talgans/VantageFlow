rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions for role-based access control
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return request.auth.token.role;
    }
    
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    function isManager() {
      return isAuthenticated() && getUserRole() == 'manager';
    }
    
    function isMember() {
      return isAuthenticated() && getUserRole() == 'member';
    }
    
    function canModifyProjects() {
      return isAdmin() || isManager();
    }
    
    function isProjectOwner(projectData) {
      return isAuthenticated() && request.auth.uid == projectData.ownerId;
    }
    
    function canEditProject(projectData) {
      return isAdmin() || isProjectOwner(projectData);
    }
    
    // Projects collection rules
    match /projects/{projectId} {
      // Anyone authenticated can read projects
      allow read: if isAuthenticated();
      
      // Admin and Manager can create projects
      allow create: if canModifyProjects();
      
      // Admin and project owner can update projects
      allow update: if canEditProject(resource.data);
      
      // Only Admin can delete projects
      allow delete: if isAdmin();
    }
    
    // User profiles collection (if you add user management)
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can update their own profile
      allow update: if isAuthenticated() && request.auth.uid == userId;
      
      // Only admins can create or delete user profiles
      allow create, delete: if isAdmin();
    }
    
    // Role permissions collection
    match /rolePermissions/{docId} {
      // All authenticated users can read permissions (to check their own access)
      allow read: if isAuthenticated();
      
      // Only admins can write permissions
      allow write: if isAdmin();
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
